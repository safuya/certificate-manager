<h1>Load Balancers</h1>

<button class="features">
  <a href="/load_balancers/new" id="new-load-balancer" class="add">
    <i class="fas fa-plus fa-3x"></i>
  </a>
</button>

<table>
  <thead>
    <tr>
      <th>Hostname</th>
      <th>IP Address</th>
      <th>Certificates</th>
    </tr>
  </thead>
  <tbody>
    <% @load_balancers.each do |load_balancer| %><tr>
      <td>
        <%= link_to load_balancer.hostname,
                    load_balancer_certificates_url(load_balancer),
                    id: "index-#{load_balancer.id}" %>
        <%= link_to edit_load_balancer_url(load_balancer),
          id: "edit-#{load_balancer.id}" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </td>
      <td><%= load_balancer.ip_address %></td>
      <td>
        <% load_balancer.certificates.each do |cert| %>
          <p><%= cert.url %></p>
        <% end %>
        <p>
          <button class="features">
            <%= link_to new_load_balancer_certificate_url(load_balancer),
              class: 'add', id: "new-certificate-#{load_balancer.id}" do %>
              <i class="fas fa-plus"></i>
            <% end %>
          </button>
        </p>
      </td>
    </tr><% end %>
  </tbody>
</table>
