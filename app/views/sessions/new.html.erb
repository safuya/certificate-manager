<h1>Certificate Manager</h1>

<%= form_tag sessions_url do %>
  <%= text_field_tag :username, 'Username', class: 'big_input fat_sides' %>
  <%= password_field_tag :password, 'Password', class: 'big_input fat_sides' %>
  <%= submit_tag 'ENTER', class: 'form_submit big_input fat_sides' %>
<% end %>
<div class="flex">
  <i class="fab fa-github fa-2x"></i>
  <%= link_to "Login using GitHub", '/auth/github', id: 'github', class: 'oauth' %>
</div>
