<h1>Edit Profile</h1>

<%= form_for @user, class: 'center' do |f| %>
  <div class="center">
    <label for="user_username">Username</label>
    <%= f.text_field :username, class: 'big_input fat_sides' %>

    <label for="user_current_password">Current Password</label>
    <input type="password" name="current_password" id="user_current_password"
      class="big_input fat_sides">

    <label for="user_password">Password</label>
    <%= f.password_field :password, class: 'big_input fat_sides' %>

    <label for="user_password_confirmation">Confirm Password</label>
    <input type="password" name="password_confirmation"
      id="user_password_confirmation" class="big_input fat_sides">
    <%= f.submit 'UPDATE', id: 'submit', class: 'form_submit big_input' %>
  </div>
<% end %>
