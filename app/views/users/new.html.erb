<h1>Register</h1>

<%= form_for @user do |f| %>
  <%= f.text_field :username, placeholder: 'Username',
    class: 'big_input fat_sides' %>
  <%= f.password_field :password, placeholder: 'Password',
    class: 'big_input fat_sides' %>
  <%= f.submit 'REGISTER', id: 'register',
    class: 'form_submit big_input fat_sides' %>
<% end %>
